# LibreOffice AI Writing Assistant - Environment Configuration
# Copy this file to .env and replace placeholder values with real API keys and settings

# =============================================================================
# AI/LLM API KEYS (At least one required)
# =============================================================================

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here
# Anthropic API Key (for Claude models) 
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default AI model to use
AGENT_DEFAULT_MODEL=gpt-3.5-turbo

# =============================================================================
# FINANCIAL DATA API KEYS (Optional - for financial document features)
# =============================================================================

# Alpha Vantage API Key (for stock/financial data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Yahoo Finance is enabled by default (no API key needed)

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Response time targets (seconds)
AGENT_SIMPLE_TARGET=2.0
AGENT_MODERATE_TARGET=4.0  
AGENT_COMPLEX_TARGET=5.0

# Resource limits
AGENT_MAX_MEMORY_MB=200
AGENT_MAX_CPU_PERCENT=10.0

# Concurrency settings
AGENT_MAX_PARALLEL=3
AGENT_TIMEOUT_SECONDS=30

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Enable analysis result caching
AGENT_CACHE_ENABLED=true

# Cache time-to-live (seconds)
AGENT_CACHE_TTL=300

# Maximum cache entries
AGENT_CACHE_MAX_ENTRIES=100

# Maximum cache size (MB)
AGENT_MAX_CACHE_SIZE_MB=50

# =============================================================================
# LIBREOFFICE INTEGRATION SETTINGS
# =============================================================================

# UNO service connection timeout (seconds)
UNO_CONNECTION_TIMEOUT=10

# Document operation timeout (seconds)
DOC_OPERATION_TIMEOUT=30

# Maximum document size to process (MB)
MAX_DOCUMENT_SIZE_MB=50

# Enable undo tracking for document operations
ENABLE_UNDO_TRACKING=true

# UI progress update interval (milliseconds)  
PROGRESS_UPDATE_INTERVAL_MS=250

# Enable operation cancellation
ENABLE_CANCELLATION=true

# =============================================================================
# API RATE LIMITING
# =============================================================================

# API requests per minute limit
API_REQUESTS_PER_MINUTE=60

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=5

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
AGENT_LOG_LEVEL=INFO

# Enable performance metrics logging
ENABLE_PERFORMANCE_LOGGING=true

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================

# Enable debug mode (more verbose logging, slower performance)
AGENT_DEBUG_MODE=false

# Enable semantic analysis features
ENABLE_SEMANTIC_ANALYSIS=true

# Mock mode (for testing without real LibreOffice/API calls)
AGENT_MOCK_MODE=false

# =============================================================================
# TASKMASTER INTEGRATION (Optional - for project management)
# =============================================================================

# Perplexity API Key (for TaskMaster research features)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Google API Key (for Gemini models)
GOOGLE_API_KEY=your_google_api_key_here

# Mistral API Key
MISTRAL_API_KEY=your_mistral_api_key_here

# OpenRouter API Key (for multiple model access)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# XAI API Key (for Grok models)
XAI_API_KEY=your_xai_api_key_here

# Azure OpenAI API Key
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# Ollama API Key (for local models)
OLLAMA_API_KEY=your_ollama_api_key_here

# =============================================================================
# USAGE NOTES
# =============================================================================

# 1. At minimum, you need either OPENAI_API_KEY or ANTHROPIC_API_KEY
# 2. Financial API keys are optional but enable enhanced financial document features
# 3. TaskMaster API keys are optional and only needed if using TaskMaster features
# 4. Performance settings can be tuned based on your system capabilities
# 5. Cache settings help optimize repeated operations
# 6. Set AGENT_MOCK_MODE=true for testing without real API calls or LibreOffice